<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AndroidPeoples" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Widget.MaterialComponents.Button.ButtonPattern">
        <item name="android:backgroundTint">@color/primary</item>
        <item name="android:fontFamily">@font/oswald</item>
        <item name="cornerRadius">20dp</item>
        <item name="strokeColor">@color/white</item>
        <item name="strokeWidth">1dp</item>
        <item name="rippleColor">@color/primary_dark</item>
    </style>

    <style name="Widget.MaterialComponents.Button.MainMenuButton" parent="Widget.MaterialComponents.Button.ButtonPattern">
        <item name="android:layout_width">280dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="iconSize">35dp</item>
        <item name="android:paddingEnd">60dp</item>
    </style>

    <style name="TextInputStyle">
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/input_text_background</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@drawable/input_text_font</item>
        <item name="android:textColorHint">@color/inactive_dark</item>
    </style>

    <style name="TextAppearance.AppCompat.Header">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/oswald</item>
    </style>

    <style name="TextAppearance.AppCompat.RegionList">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/lato</item>
    </style>

    <style name="TextAppearance.AppCompat.MainText">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/lato</item>
    </style>

    <style name="TextAppearance.AppCompat.TogleText">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/lato</item>
    </style>

    <style name="TextAppearance.AppCompat.TogleText.Inactive">
        <item name="android:textColor">@color/inactive_dark</item>
    </style>

    <style name="TextAppearance.AppCompat.TogleText.Active">
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="TextAppearance.AppCompat.InactiveText">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/inactive_dark</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/lato</item>
    </style>

    <style name="TextAppearance.AppCompat.PrimaryLink">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/oswald</item>
        <item name="android:letterSpacing">0.2</item>
    </style>
</resources>